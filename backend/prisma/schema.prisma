generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String?
  password   String
  portfolios Portfolio[]
  createdAt  DateTime    @default(now())
}

model Portfolio {
  id           Int                 @id @default(autoincrement())
  name         String
  balance      Float               @default(0)
  transactions Transaction[]
  snapshots    PortfolioSnapshot[]
  userId       Int
  user         User                @relation(fields: [userId], references: [id])
  createdAt    DateTime            @default(now())
  Holding      Holding[]
  Order        Order[]
}

model PortfolioSnapshot {
  id          Int      @id @default(autoincrement())
  portfolioId Int
  totalValue  Float
  createdAt   DateTime @default(now())

  portfolio Portfolio @relation(fields: [portfolioId], references: [id])
}

model Order {
  id          Int       @id @default(autoincrement())
  portfolioId Int
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])

  symbol     String
  side       String // 'buy' | 'sell'
  type       String // 'market' | 'limit' | 'stop'
  quantity   Float
  limitPrice Float?
  stopPrice  Float?

  status           String    @default("pending") // 'pending' | 'filled' | 'cancelled' | 'expired'
  priceAtExecution Float?
  executedAt       DateTime?

  createdAt DateTime @default(now())
}

model Transaction {
  id               Int       @id @default(autoincrement())
  symbol           String
  amount           Float
  type             String
  priceAtExecution Float     @default(0)
  portfolioId      Int
  balance          Float     @default(0)
  portfolio        Portfolio @relation(fields: [portfolioId], references: [id])
  createdAt        DateTime  @default(now())
}

model Holding {
  id          Int       @id @default(autoincrement())
  symbol      String
  quantity    Float     @default(0)
  avgBuyPrice Float     @default(0)
  portfolioId Int
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
